# Ejemplo de archivo de variables para Terraform
# Copia este archivo a terraform.tfvars y ajusta los valores

# Región de AWS donde se desplegará la instancia
aws_region = "us-east-1"

# Tipo de instancia EC2
# t2.micro es elegible para free tier
# Para producción considera: t3.small, t3.medium, etc.
instance_type = "t2.micro"

# Nombre del key pair que creaste en AWS
# IMPORTANTE: Debes crear este key pair en AWS Console primero
# AWS Console > EC2 > Key Pairs > Create key pair
key_name = "mi-key-pair"

# Nombre del proyecto
project_name = "dark-trifid"
